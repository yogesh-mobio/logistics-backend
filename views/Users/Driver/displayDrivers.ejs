<link
  href="/assets/plugins/datatables/responsive.bootstrap4.min.css"
  rel="stylesheet"
  type="text/css"
/>

<%- contentFor('breadcrumb') %>
<ul class="list-inline menu-left mb-0">
  <li class="list-inline-item">
    <button type="button" class="button-menu-mobile open-left waves-effect">
      <i class="ion-navicon"></i>
    </button>
  </li>
  <li class="hide-phone list-inline-item app-search">
    <h3 class="page-title">Drivers</h3>
  </li>
</ul>

<%- contentFor('body') %>
<div class="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card m-b-20">
          <div class="card-body">
            <h4 class="mt-0 header-title">List of all the drivers</h4>
            <% include ../../Partials/errorMessages %>

            <table
              id="datatable"
              class="table table-bordered dt-responsive nowrap"
              cellspacing="0"
              width="100%"
            >
            <thead>
                <tr>
                  <th>ID</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <!-- <th>Photo</th> -->
                  <th>Verified</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>

              <tbody>
                <% for(var i=0;i<drivers.length;i++) { %>
                  <tr>
                    <td><%= i+1 %></td>
                    <td><%= drivers[i].driverData.first_name %></td>
                    <td><%= drivers[i].driverData.last_name %></td>
                    <td><%= drivers[i].driverData.email %></td>
                    <td><%= drivers[i].driverData.phone_number %></td>
                   
                    <% if( drivers[i].driverData.is_verified === "verified" ) { %>
                      <td style="text-align: center;">
                        <!-- <button class="btn btn-primary waves-effect waves-light change_isVerified_driver"disabled> -->
                        <button class="btn btn-primary waves-effect waves-light" disabled>
                          <i class="mdi mdi mdi-check" style="font-size: 20px;"></i>
                        <!-- verified -->
                      </button>
                    </td>
                    <% } else if( drivers[i].driverData.is_verified === "rejected" ) { %>
                      <td style="text-align: center;">
                        <!-- <button class="btn btn-warning waves-effect waves-light change_isVerified_driver"  id="driverIsVerified_<%= drivers[i].transporter_id %>_<%= drivers[i].user_uid %>"> -->
                        <button class="btn btn-danger waves-effect waves-light"  id="driverIsVerified_<%= drivers[i].transporter_id %>_<%= drivers[i].user_uid %>" disabled>
                          <i class=" mdi mdi-close" style="font-size: 20px;"></i>
                          <!-- Pending -->
                        </button>
                    </td>
                    <% } else { %>
                      <td style="text-align: center;">
                        <!-- <button class="btn btn-warning waves-effect waves-light change_isVerified_driver"  id="driverIsVerified_<%= drivers[i].transporter_id %>_<%= drivers[i].user_uid %>"> -->
                        <button class="btn btn-warning waves-effect waves-light"  id="driverIsVerified_<%= drivers[i].transporter_id %>_<%= drivers[i].user_uid %>" disabled>
                          <i class="mdi mdi-alert-circle-outline" style="font-size: 20px;"></i>
                          <!-- Pending -->
                        </button>
                    </td>
                    <% } %>
  
                    <% if( drivers[i].driverData.status === true ) { %>
                      <td style="text-align: center;">
                      <span data-toggle="modal" data-target="#statusModal_<%= drivers[i].id %>">
                        <button class="btn btn-success waves-effect waves-light change_status" id="<%= drivers[i].id %>">Active</button>
                      </span>
                      </td>
                    <% } else { %>
                      <td style="text-align: center;">
                      <span data-toggle="modal" data-target="#statusModal_<%= drivers[i].id %>">
                        <button class="btn btn-danger waves-effect waves-light change_status"  id="<%= drivers[i].id %>">In-Active</button>
                      </span>
                      </td>
                    <% } %>
  
                    <td style="text-align: center;">
                      <span data-toggle="modal" data-target="#removeModal_<%= drivers[i].id %>">
                        <button 
                        type="button" 
                        class="btn btn-danger waves-effect waves-light m-r-5" 
                        data-toggle="tooltip" data-original-title="Delete"
                        >
                        <i class="mdi mdi-delete "></i>
                        <!-- <span> Delete </span> -->
                        </button>
                      </span>
                        <!-- <button 
                        type="button" 
                        class="btn btn-warning waves-effect waves-light m-r-5" 
                        data-toggle="tooltip" data-original-title="Edit"
                        >
                        <i class="mdi mdi-grease-pencil"></i> -->
                        <!-- <span> Edit </span> -->
                        <!-- </button> -->
                        <button
                        type="button"
                        class="btn btn-warning waves-effect waves-light m-r-5"
                        data-toggle="tooltip"
                        data-original-title="Edit"
                        onclick="location.href='/driver/<%= drivers[i].transporter_id %>/updateDriver/<%= drivers[i].id %>'"
                      >
                        <i class="mdi mdi-grease-pencil"></i>
                        <!-- <span> Edit </span> -->
                      </button>
                        <button 
                        type="button" 
                        class="btn btn-info waves-effect waves-light m-r-5" 
                        data-toggle="tooltip" data-original-title="View"
                        onclick="location.href='/driver/<%= drivers[i].transporter_id %>/details/<%= drivers[i].id %>'"
                        >
                        <i class="mdi mdi-file-document"></i>
                        <!-- <span> View </span> -->
                        </button>
                    </td>
                  </tr>
                <!-- Modal -->
                <div class="modal fade" id="removeModal_<%= drivers[i].id %>" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">
                          Are you sure you want to delete this user?
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <form role="form" id="modalForm_<%= drivers[i].transporter_id %>_<%= drivers[i].user_uid %>" class="remove_form_driver">
                          <div>
                            <div class="form-group row">
                              <label  class="col-sm-2 col-form-label"
                                >Reason</label
                              >
                              <div class="col-sm-10">
                                <input
                                  class="form-control"
                                  type="text"
                                  id="reasonForDelete_<%= drivers[i].user_uid %>"
                                  name="reason"
                                  placeholder="Please enter the reason for deletetion."
                                  required
                                />
                              </div>
                            </div>
                          </div>
                        <div class="modal-footer">
                          <button type="button" id="btnModalClose_<%= drivers[i].transporter_id %>_<%= drivers[i].user_uid %>" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <button type="submit" id="btnDelete_<%= drivers[i].transporter_id %>_<%= drivers[i].user_uid %>" class="btn btn-danger remove-driver">Delete</button>
                        </div>
                      </div>
                    </form>
                    </div>
                  </div>
                </div>
                <!-- Modal For Enable/Disable -->
                <div class="modal fade" id="statusModal_<%= drivers[i].id %>" tabindex="-1" role="dialog" aria-labelledby="modalStatusLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="modalStatusLabel">
                          Are you sure you want to change Driver's status?
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <form role="form" method="POST" id="modalStatusForm_<%= drivers[i].transporter_id %>_<%= drivers[i].user_uid %>" class="status_form_driver">
                          <div>
                            <div class="form-group row">
                              <label  class="col-sm-2 col-form-label"
                                >Reason</label
                              >
                              <div class="col-sm-10">
                                <input
                                  class="form-control"
                                  type="text"
                                  name="reason"
                                  id="statusChangeReason_<%= drivers[i].user_uid %>"
                                  placeholder="Please enter the reason for changing the status."
                                  required
                                />
                              </div>
                            </div>
                          </div>
                        <div class="modal-footer">
                          <button type="button" id="btnModalStatusClose_<%= drivers[i].transporter_id %>_<%= drivers[i].user_uid %>" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <button type="submit" id="btnStatusChange_<%= drivers[i].transporter_id %>_<%= drivers[i].user_uid %>" class="btn btn-warning status-transporter">Change Status</button>
                        </div>
                      </div>
                    </form>
                    </div>
                  </div>
                </div>
                <% } %>
                </tbody>
            </table>
          </div>
        </div>
      </div>
      <!-- end col -->
    </div>
    <!-- end row -->
  </div>
</div>
