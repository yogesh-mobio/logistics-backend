<%- contentFor('HeaderCss') %> <%- contentFor('breadcrumb') %>
<ul class="list-inline menu-left mb-0">
  <li class="list-inline-item">
    <button type="button" class="button-menu-mobile open-left waves-effect">
      <i class="ion-navicon"></i>
    </button>
  </li>
  <li class="hide-phone list-inline-item app-search">
    <h3 class="page-title">Directory</h3>
  </li>
</ul>

<%- contentFor('body') %>
<div class="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
        <% if(drivers.length >=1 ) { %> 
            <% for(var i=0;i<drivers.length;i++) { %>
                <div class="col-lg-4">
                    <div class="card m-b-20">
                    <div class="card-body">
                        <div class="media">
                        <img
                            class="d-flex mr-3 rounded-circle thumb-lg"
                            src="data:<%= drivers[i].driverData.driver_photo.type %>;base64,<%= drivers[i].driverData.driver_photo.base64 %>"
                            alt="Generic placeholder image"
                        />
                        <div class="media-body">
                            <h5 class="m-t-10 font-18 mb-1">
                                <%= drivers[i].driverData.first_name %>&nbsp;<%= drivers[i].driverData.last_name %> 
                                <% if(drivers[i].driverData.status == "verified") { %>
                                    <span>&#x2705;</span>
                                <% } %>
                            </h5>
                            <p class="text-muted m-b-5"><%= drivers[i].driverData.email %></p>
                            <p class="text-muted m-b-5"><%= drivers[i].driverData.phone_number %></p>

                            <a type="button" href="/transporter/<%= drivers[i].transporter_id %>/drivers/<%= drivers[i].id %>" class="btn btn-warning btn-sm">View</a>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <h3 style="color: red;align-content: center;">There is no Driver</h3>
        <% } %>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %>
<script src="/assets/plugins/sparklines-chart/jquery.sparkline.min.js"></script>
<script src="/assets/pages/directory.init.js"></script>

<%- contentFor('BottomJs') %>
