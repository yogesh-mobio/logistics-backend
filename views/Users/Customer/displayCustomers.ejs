<script>
  $(function () {
    $(document).on("click", ".change_status", function (e) {
      e.preventDefault();
      const id=$(this).attr("id");
      $.ajax({
        url:`/customer/status/${id}`,
        type:"POST",
        success:function(){
          location.reload();
        },
        error:function(){
          alert(`There is some issue to this ${id}`);
        }
      });
    });

    $(".remove_form").submit(function(e){
      e.preventDefault();
      const id=$(this).attr("id");  
      const split_id=id.split("_")[1];      
      const data={
        reason:$("#reasonForDelete_"+split_id).val(),
      }
      $.ajax({
        url:`/customer/removeCustomer/${split_id}`,
        type:"POST",
        data:data,
        success:function(){
          location.reload(true);
          // alert("The Record's been deleted...!!");
        },
        error:function(){
          alert(`There is some issue with the delete.`);
        }
      });
    });
  });
</script>

