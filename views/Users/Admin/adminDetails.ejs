<%- contentFor('HeaderCss') %> <%- contentFor('breadcrumb') %>
<ul class="list-inline menu-left mb-0">
  <li class="list-inline-item">
    <button type="button" class="button-menu-mobile open-left waves-effect">
      <i class="ion-navicon"></i>
    </button>
  </li>
  <li class="hide-phone list-inline-item app-search">
    <h3 class="page-title">Admin Details</h3>
  </li>
</ul>

<%- contentFor('body') %>
<div class="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card m-b-20">
          <div class="card-body">
            <h4 class="mt-0 header-title">
              See all the details of a particular Admin
            </h4>
            <br /><br />
            <% include ../../Partials/errorMessages %>
            <form method="POST" class="form-horizontal">
              <div class="form-group row">
                <label for="adminFirstName" class="col-sm-2 col-form-label"
                  >First Name</label
                >
                <div class="col-sm-10">
                  <input
                    class="form-control"
                    type="text"
                    id="adminFirstName"
                    name="firstName"
                    placeholder="Enter your First Name"
                    value="<%= admin.first_name %>"
                    readonly
                  />
                </div>
              </div>

              <div class="form-group row">
                <label for="adminLastName" class="col-sm-2 col-form-label"
                  >Last Name</label
                >
                <div class="col-sm-10">
                  <input
                    class="form-control"
                    type="text"
                    id="adminLastName"
                    name="lastName"
                    placeholder="Enter your Last Name"
                    value="<%= admin.last_name %>"
                    readonly
                  />
                </div>
              </div>

              <div class="form-group row">
                <label for="adminEmail" class="col-sm-2 col-form-label"
                  >Email</label
                >
                <div class="col-sm-10">
                  <input
                    class="form-control"
                    type="text"
                    id="adminEmail"
                    name="email"
                    placeholder="Enter your Email"
                    value="<%= admin.email %>"
                    readonly
                  />
                </div>
              </div>

              <div class="form-group row">
                <label for="adminPhoneNumber" class="col-sm-2 col-form-label"
                  >Phone Number</label
                >
                <div class="col-sm-10">
                  <input
                    class="form-control"
                    type="text"
                    id="adminPhoneNumber"
                    name="phone"
                    placeholder="Enter your Phone Number"
                    value="<%= admin.phone_number %>"
                    readonly
                  />
                </div>
              </div>

              <div class="form-group row">
                <label for="adminStatus" class="col-sm-2 col-form-label"
                  >Status</label
                >
                <div class="col-sm-10">
                  <input class="form-control" type="text" id="adminStatus"
                  name="status" <% if(admin.status===false) { %>
                  value="In-Active" <% } else { %> value="Active"<% } %>
                  readonly />
                </div>
              </div>

              <!-- <div class="form-group row">
                <label for="adminIsDeleted" class="col-sm-2 col-form-label"
                  >Deleted</label
                >
                <div class="col-sm-10">
                  <input class="form-control" type="text" id="adminIsDeleted"
                  name="isDeleted" <% if(admin.is_deleted===false) { %>
                  value="No" <% } else { %> value="Yes"<% } %> readonly />
                </div>
              </div> -->

              <button
                type="button"
                class="btn btn-primary btn-group waves-effect"
                onclick="location.href='/admin/displayAdmins'"
              >
                Display Admins
              </button>

              <button
                id="btnCancel"
                name="btnCancel"
                type="button"
                class="btn btn-danger btn-group waves-effect"
                onclick="location.href='/dashboard'"
              >
                Cancel
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>
