<%- contentFor('body') %>
<div class="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card m-b-20">
          <div class="card-body">
            <h4 class="mt-0 header-title">List of all the orders</h4>
            <% include ../Partials/errorMessages %>
            <form method="POST" class="form-horizontal">
            <input type="date" id="startDateDetails" name="start" />
            <input type="date" id="endDateDetails" name="end" />
            
              <button
              
              id="datebtn"
              class="btn btn-primary btn-group waves-effect"
              
              >Export to Excel</button
            >
            </form>
            <table
              id="datatable"
              class="table table-bordered dt-responsive nowrap"
              cellspacing="0"
              width="100%"
            >
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Order ID</th>
                  <th>Vehicle Type</th>
                  <th>Price</th>
                  <th>Requested User</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>

              <tbody>
                <% for(var i=0;i<orders.length;i++) { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= orders[i].orderData.order_id %></td>
                  <td><%= orders[i].orderData.vehicle_type %></td>
                  <td><%= orders[i].orderData.price %></td>
                  <td><%= orders[i].orderData.requested_uid %></td>
                  <td><%= orders[i].orderData.status %></td>
                  <td style="text-align: center;">
                    <button 
                    type="button"
                    class="btn btn-info waves-effect waves-light m-r-5" 
                    data-toggle="tooltip" data-original-title="View"
                    onclick="location.href='/order/orderDetails/<%= orders[i].id %>'"
                    >
                    <i class="mdi mdi-file-document"></i>
                    <!-- <span> View </span> -->
                    </button>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!-- end col -->
    </div>
    <!-- end row -->
  </div>
</div>

