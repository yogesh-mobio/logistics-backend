<% include ../Partials/HeaderRoot %>

<div id="preloader">
  <div id="status"><div class="spinner"></div></div>
</div>

<!-- Begin page -->
<div class="accountbg"></div>
<div class="wrapper-page">
  <div class="card">
    <div class="card-body">
      <h3 class="text-center m-0">
        <a href="#" class="logo logo-admin"
          ><img src="/icon/sms.png" height="70" alt="logo"
        /></a>
      </h3>
    
      <div class="p-3">
        <h4 class="font-18 m-b-5 text-center">Mobile Phone verification</h4>
        <p class="text-muted text-center">Enter the code we just send on your Mobile Number</p>
        <% include ../Partials/errorMessages %>
        <form class="form-horizontal m-t-30" action="/otp" method="post">
          <div class="form-group">
          <input
              type="text"
              class="form-control"
              name="name"
              readonly
              value=<%=name %> />
          </div>
          <div class="form-group">
           <input
              type="number"
              class="form-control"
              name="phone_number"
              min="10"
              readonly
              value=<%=phone_number %> />
           </div>
           <div class="form-group">
           <input
           name="code"
           class="form-control"
           type="number"
           minlength="6"
           maxlength="6"
           placeholder="Enter OTP"
           required="required"
         />
        </div>
        
            </div>
            <div class="col-sm-8 text-right">
              <button
                class="btn btn-primary w-md waves-effect waves-light"
                type="submit"
              >
                Confirm
              </button>
            </div>
            <div class="text-center mt-3">
               <span class="d-block mobile-text">Don't receive the code?</span>
                <!-- <span class="font-weight-bold text-danger cursor"><a id="button1" >Resend</span> -->
                    <button
                    class="btn btn-danger w-md waves-effect waves-light"
                    id = "button1"
                   >
                    Resend
                  </button>
                  
              </div>
          </div>

        
        </form>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script>
            $(document).ready(function() {
            $("#button1").click(function () {
                $.ajax({
                  type: "POST",
                  url:`/resend`,
                  data:{ name: '<%=name%>', phone_number: '<%=phone_number%>' },
                });
        
           });
        });
            </script>
    
      </div>
    </div>
  </div>

  <div class="m-t-40 text-center">
  
    <p class="text-white">
      Â© <%= new Date().getFullYear() - 1; %> - <%= new Date().getFullYear(); %>
      Road Ferry. 
    </p>
  </div>
</div>

<% include ../Partials/FooterRoot %>


