<%- contentFor('breadcrumb') %>
<ul class="list-inline menu-left mb-0">
  <li class="list-inline-item">
    <button type="button" class="button-menu-mobile open-left waves-effect">
      <i class="ion-navicon"></i>
    </button>
  </li>
  <li class="hide-phone list-inline-item app-search">
    <h3 class="page-title">Contacts</h3>
  </li>
</ul>

<%- contentFor('body') %>
<div class="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card m-b-20">
          <div class="card-body">
            <h4 class="mt-0 header-title">List of all the contacts</h4>
            <% include ../Partials/errorMessages %>

            <table
              id="datatable"
              class="table table-bordered dt-responsive nowrap"
              cellspacing="0"
              width="100%"
            >
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Title</th>
                  <th>Subject</th>
                  <th>Contact By</th>
                  <th>Actions</th>
                </tr>
              </thead>

              <tbody>
                <% for(var i=0;i<contacts.length;i++) { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= contacts[i].contactData.title %></td>
                  <td><%= contacts[i].contactData.subject %></td>
                  <td><%= contacts[i].contactData.contact_by %></td>
                  <td style="text-align: center;">
                    <button 
                    type="button"
                    class="btn btn-info waves-effect waves-light m-r-5" 
                    data-toggle="tooltip" data-original-title="View"
                    onclick="location.href='/contact/contactDetails/<%= contacts[i].id %>'"
                    >
                    <i class="mdi mdi-file-document"></i>
                    <!-- <span> View </span> -->
                    </button>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!-- end col -->
    </div>
    <!-- end row -->
  </div>
</div>

