<%- contentFor('body') %>
<div class="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card m-b-20">
          <div class="card-body">
            <h4 class="mt-0 header-title">List of all the Vehicles</h4>
            <% include ../Partials/errorMessages %>
            <table
              id="datatable"
              class="table table-bordered dt-responsive nowrap"
              cellspacing="0"
              width="100%"
            >
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Vehicle Type</th>
                  <th>Vehicle Number</th>
                  <th>Chassis Number</th>
                  <th>Verified</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>

              <tbody>
              <% for(var i=0;i<vehicles.length;i++) { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= vehicles[i].vehicleData.vehicle_type %></td>
                  <td><%= vehicles[i].vehicleData.vehicle_number %></td>
                  <td><%= vehicles[i].vehicleData.chassis_number %></td>
                  <% if( vehicles[i].vehicleData.is_verified === "verified" ) { %>
                    <td style="text-align: center;">
                      <button class="btn btn-primary waves-effect waves-light change_isVerified" disabled>
                        <i class="mdi mdi mdi-check" style="font-size: 20px;"></i>
                      <!-- verified -->
                    </button>
                  </td>
                  <% } else { %>
                    <td style="text-align: center;">
                      <button class="btn btn-warning waves-effect waves-light change_isVerified"  id="vehicleIsVerified_<%= vehicles[i].transporter_id %>_<%= vehicles[i].id %>">
                        <i class="mdi mdi-alert-circle-outline" style="font-size: 20px;"></i>
                        <!-- Pending -->
                      </button>
                  </td>
                  <% } %>

                  <% if( vehicles[i].vehicleData.status === true ) { %>
                    <td style="text-align: center;">
                    <span data-toggle="modal" data-target="#statusModal_<%= vehicles[i].id %>">
                      <button class="btn btn-success waves-effect waves-light change_status" id="<%= vehicles[i].id %>">Active</button>
                    </span>
                    </td>
                  <% } else { %>
                    <td style="text-align: center;">
                    <span data-toggle="modal" data-target="#statusModal_<%= vehicles[i].id %>">
                      <button class="btn btn-danger waves-effect waves-light change_status"  id="<%= vehicles[i].id %>">In-Active</button>
                    </span>
                    </td>
                  <% } %>

                  <td style="text-align: center;">
                    <span data-toggle="modal" data-target="#removeModal_<%= vehicles[i].id %>">
                      <button 
                      type="button" 
                      class="btn btn-danger waves-effect waves-light m-r-5" 
                      data-toggle="tooltip" data-original-title="Delete"
                      >
                      <i class="mdi mdi-delete "></i>
                      <!-- <span> Delete </span> -->
                      </button>
                    </span>
                      <!-- <button 
                      type="button" 
                      class="btn btn-warning waves-effect waves-light m-r-5" 
                      data-toggle="tooltip" data-original-title="Edit"
                      >
                      <i class="mdi mdi-grease-pencil"></i> -->
                      <!-- <span> Edit </span> -->
                      <!-- </button> -->
                      <button 
                      type="button" 
                      class="btn btn-info waves-effect waves-light m-r-5" 
                      data-toggle="tooltip" data-original-title="View"
                      onclick="location.href='/vehicle/<%= vehicles[i].transporter_id %>/vehicleDetails/<%= vehicles[i].id %>'"
                      >
                      <i class="mdi mdi-file-document"></i>
                      <!-- <span> View </span> -->
                      </button>
                  </td>
                </tr>
              <!-- Modal -->
              <div class="modal fade" id="removeModal_<%= vehicles[i].id %>" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="modalLabel">
                        Are you sure you want to delete this Vehicle?
                      </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form role="form" id="modalForm_<%= vehicles[i].transporter_id %>_<%= vehicles[i].id %>" class="remove_form">
                        <div>
                          <div class="form-group row">
                            <label  class="col-sm-2 col-form-label"
                              >Reason</label
                            >
                            <div class="col-sm-10">
                              <input
                                class="form-control"
                                type="text"
                                id="reasonForDelete_<%= vehicles[i].id %>"
                                name="reason"
                                placeholder="Please enter the reason for deletetion."
                                required
                              />
                            </div>
                          </div>
                        </div>
                      <div class="modal-footer">
                        <button type="button" id="btnModalClose_<%= vehicles[i].transporter_id %>_<%= vehicles[i].id %>" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" id="btnDelete_<%= vehicles[i].transporter_id %>_<%= vehicles[i].id %>" class="btn btn-danger remove-driver">Delete</button>
                      </div>
                    </div>
                  </form>
                  </div>
                </div>
              </div>
              <!-- Modal For Enable/Disable -->
              <div class="modal fade" id="statusModal_<%= vehicles[i].id %>" tabindex="-1" role="dialog" aria-labelledby="modalStatusLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="modalStatusLabel">
                        Are you sure you want to change Vehicle's status?
                      </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form role="form" id="modalStatusForm_<%= vehicles[i].transporter_id %>_<%= vehicles[i].id %>" class="status_form">
                        <div>
                          <div class="form-group row">
                            <label  class="col-sm-2 col-form-label"
                              >Reason</label
                            >
                            <div class="col-sm-10">
                              <input
                                class="form-control"
                                type="text"
                                id="statusChangeReason_<%= vehicles[i].id %>"
                                name="reason"
                                placeholder="Please enter the reason for changing the status."
                                required
                              />
                            </div>
                          </div>
                        </div>
                      <div class="modal-footer">
                        <button type="button" id="btnModalStatusClose_<%= vehicles[i].transporter_id %>_<%= vehicles[i].id %>" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" id="btnStatusChange_<%= vehicles[i].transporter_id %>_<%= vehicles[i].id %>" class="btn btn-warning status-transporter">Change Status</button>
                      </div>
                    </div>
                  </form>
                  </div>
                </div>
              </div>
              <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!-- end col -->
    </div>
    <!-- end row -->
  </div>
</div>

