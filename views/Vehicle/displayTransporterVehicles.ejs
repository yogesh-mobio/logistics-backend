<script>
  $(function () {
    $(".status_form").submit(function(e){
      e.preventDefault();
      const id=$(this).attr("id");
    //   console.log("ID***",id);
      const transporter_id=id.split("_")[1];
    //   console.log("TransporterID***",transporter_id);
      const vehicle_id=id.split("_")[2];
    //   console.log("DriverID***",driver_id);
      const data={
        reason:$("#statusChangeReason_"+vehicle_id).val(),
      }
    //   console.log("DATA***",data);
      $.ajax({
        url:`/vehicle/${transporter_id}/status/${vehicle_id}`,
        type:"POST",
        data:data,
        success:function(){
          location.reload();
        },
        error:function(){
          alert(`There is some issue with changing status`);
        }
      });
    });

    $(".remove_form").submit(function(e){
      e.preventDefault();
      const id=$(this).attr("id");
      const transporter_id=id.split("_")[1];
      const vehicle_id=id.split("_")[2];
      const data={
        reason:$("#reasonForDelete_"+vehicle_id).val(),
      }
      $.ajax({
        url:`/vehicle/${transporter_id}/removeVehicle/${vehicle_id}`,
        type:"POST",
        data:data,
        success:function(){
          location.reload();
          // alert("The Record's been deleted...!!");
        },
        error:function(){
          alert(`There is some issue with the delete.`);
        }
      });
    });

    $(document).on("click", ".change_isVerified", function (e) {
      e.preventDefault();
      const id=$(this).attr("id");
    //   console.log("ID",id);
      const transporter_id=id.split("_")[1];
    //   console.log("TID",transporter_id);
      const vehicle_id=id.split("_")[2];
    //   console.log("VID",vehicle_id);
      $.ajax({
        url:`/vehicle/${transporter_id}/verifyVehicle/${vehicle_id}`,
        type:"POST",
        success:function(){
          location.reload();
        },
        error:function(){
          alert(`There is some issue with verification`);
        }
      });
    });
  });
</script>

