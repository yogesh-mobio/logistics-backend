<%- contentFor('breadcrumb') %>
<ul class="list-inline menu-left mb-0">
  <li class="list-inline-item">
    <button type="button" class="button-menu-mobile open-left waves-effect">
      <i class="ion-navicon"></i>
    </button>
  </li>
  <li class="hide-phone list-inline-item app-search">
    <h3 class="page-title">Vehicle-Types</h3>
  </li>
</ul>

<%- contentFor('body') %>
<div class="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card m-b-20">
          <div class="card-body">
            <h4 class="mt-0 header-title">List of all the Vehicle Types</h4>
            <% include ../Partials/errorMessages %>
            <table
              id="datatable"
              class="table table-bordered dt-responsive nowrap"
              cellspacing="0"
              width="100%"
            >
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Vehicle Type Name</th>
                  <th>Capacity</th>
                  <th>Dimensions <b>(L * W * H)</b></th>
                  <th>Actions</th>
                </tr>
              </thead>

              <tbody>
              <% for(var i=0;i<vehicles.length;i++) { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= vehicles[i].vehicleData.vehicle_name %></td>
                  <td><%= vehicles[i].vehicleData.vahicle_capacity %></td>
                  <td>
                    <%= vehicles[i].vehicleData.dimensions.v_length %> <b>*</b> <%=
                    vehicles[i].vehicleData.dimensions.v_width %> <b>*</b> <%=
                    vehicles[i].vehicleData.dimensions.v_height %>
                  </td>
                  <td>
                    <a
                      data-toggle="tooltip"
                      class="btn btn-danger waves-effect waves-light m-r-5 "
                      data-original-title="Delete"
                      href="<%= `/vehicle/removeVehicle/${vehicles[i].id}` %>"
                      onclick="return confirm('Are you sure you want to delete this record?')"
                    >
                      <i class="mdi mdi-delete"></i>
                      <!-- <span> Delete </span> -->
                  </a>
                    <button
                      type="button"
                      class="btn btn-warning waves-effect waves-light m-r-5"
                      data-toggle="tooltip"
                      data-original-title="Edit"
                      onclick="location.href='/vehicle/editVehicle/<%= vehicles[i].id %>'"
                    >
                      <i class="mdi mdi-grease-pencil"></i>
                      <!-- <span> Edit </span> -->
                    </button>
                    <button
                      type="button"
                      class="btn btn-info waves-effect waves-light m-r-5"
                      data-toggle="tooltip"
                      data-original-title="View"
                      onclick="location.href='/vehicle/vehicleDetails/<%= vehicles[i].id %>'"
                    >
                      <i class="mdi mdi-file-document"></i>
                      <!-- <span> View </span> -->
                    </button>
                  </td>
                </tr>
              <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!-- end col -->
    </div>
    <!-- end row -->
  </div>
</div>

