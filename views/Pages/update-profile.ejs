<%- contentFor('HeaderCss') %> <%- contentFor('breadcrumb') %>
<ul class="list-inline menu-left mb-0">
  <li class="list-inline-item">
    <button type="button" class="button-menu-mobile open-left waves-effect">
      <i class="ion-navicon"></i>
    </button>
  </li>
  <li class="hide-phone list-inline-item app-search">
    <h3 class="page-title">Edit Profile</h3>
  </li>
</ul>

<%- contentFor('body') %>
<div class="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card m-b-20">
          <div class="card-body">
            <h4 class="mt-0 header-title">Edit your profile</h4>
            <br />
            <% include ../Partials/errorMessages %>
            <form method="POST" class="form-horizontal">
              <div class="form-group row">
                <label for="adminFirstName" class="col-sm-2 col-form-label"
                  >First Name</label
                >
                <div class="col-sm-10">
                  <input
                    class="form-control"
                    type="text"
                    id="adminFirstName"
                    name="firstName"
                    placeholder="Enter your First Name"
                    value="<%= admin.userAdmin.first_name %>"
                  />
                </div>
              </div>
              <div class="form-group row">
                <label for="adminLastName" class="col-sm-2 col-form-label"
                  >First Name</label
                >
                <div class="col-sm-10">
                  <input
                    class="form-control"
                    type="text"
                    id="adminLastName"
                    name="lastName"
                    placeholder="Enter your Last Name"
                    value="<%= admin.userAdmin.last_name %>"
                  />
                </div>
              </div>

              <div class="form-group row">
                <label for="adminPhone" class="col-sm-2 col-form-label"
                  >Phone Number</label
                >
                <div class="col-sm-10">
                  <input
                    class="form-control"
                    type="text"
                    id="adminPhone"
                    name="phone"
                    placeholder="Enter your Phone Number"
                    value="<%= admin.userAdmin.phone_number %>"
                  />
                </div>
              </div>

              <button
                type="submit"
                class="btn btn-primary btn-group waves-effect"
              >
                Update
              </button>

              <button
                type="button"
                class="btn btn-danger btn-group waves-effect"
                onclick="location.href='/dashboard'"
              >
                Cancel
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %> <%- contentFor('BottomJs') %>
